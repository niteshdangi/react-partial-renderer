{
  "name": "react-partial-renderer",
  "version": "1.0.3",
  "description": "Partial Rendering Helper for Smooth Navigation & Rendering",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "author": {
    "name": "Nitesh Kumar",
    "email": "niteshdangi28@gmail.com",
    "url": "https://niteshdangi.github.io"
  },
  "scripts": {
    "build": "yarn build:esm && yarn build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "lint": "eslint \"{**/*,*}.{js,ts,jsx,tsx}\"",
    "prettier": "prettier --write \"{src,tests,example/src}/**/*.{js,ts,jsx,tsx}\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm run prettier && npm run lint"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.0.12",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "prettier": "^2.7.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "typescript": "^4.7.3",
    "uuid": "^9.0.0"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "react",
    "typescript",
    "react-native",
    "partial",
    "rendering",
    "smooth navigation",
    "performance",
    "deferred"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/niteshdangi/react-partial-renderer.git"
  }
}
